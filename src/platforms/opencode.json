{
  "platform": "opencode",
  "displayName": "OpenCode",
  "folderStructure": {
    "root": ".opencode",
    "agentPath": "agents",
    "skillPath": "skills",
    "commandPath": "commands",
    "globalFile": "CONFIG.md"
  },
  "frontmatter": {
    "agents": {
      "required": ["name", "description", "tools", "color"]
    },
    "skills": {
      "required": ["name", "description"]
    },
    "commands": {
      "required": ["name", "description"]
    }
  },
  "features": {
    "supportsFrontmatter": true,
    "supportsColors": true,
    "supportsTools": true
  }
}
